# =============================================================================
# Backend Configuration
# =============================================================================

# FERNET_KEY: Encryption key for API keys (REQUIRED)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=

# DATABASE_URL: SQLite database path (or PostgreSQL connection string for production)
DATABASE_URL=sqlite+aiosqlite:///./merlin.db

# CORS_ORIGINS: Allowed origins for CORS
CORS_ORIGINS=http://localhost:3000

# LOG_LEVEL: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# JWT_SECRET_KEY: Secret key for JWT authentication
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=

# =============================================================================
# Frontend Configuration
# =============================================================================

# NEXT_PUBLIC_API_URL: Backend API URL (visible to browser)
NEXT_PUBLIC_API_URL=http://localhost:8001

# AUTH_SECRET: NextAuth secret for authentication
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
AUTH_SECRET=
